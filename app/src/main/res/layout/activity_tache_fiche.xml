<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="ExtraText">

            <ImageView
                android:id="@+id/arrowBack"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/arrow_back"
                android:layout_marginBottom="-50dp"
                android:layout_marginLeft="-16dp"
                style="?android:borderlessButtonStyle"

                android:alpha="0.5"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageVieww"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/main" />

            <TextView
                android:id="@+id/txtarealiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A réaliser :"
                android:textAlignment="center"
                android:textSize="36dp"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="20dp"/>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FF909090"
                android:layout_marginBottom="20dp"/>


            <TextView
                android:id="@+id/txtCategorie"
                android:layout_width="wrap_content"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"

                android:layout_height="wrap_content"
                android:text="Catégorie"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:background="@drawable/button_shape"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="60dp"
                />




            <TextView
                android:id="@+id/txtTitre1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Titre"
                android:layout_marginBottom="0dp"/>

            <TextView
                android:id="@+id/txtTitreT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txtUrgence1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Urgence :"
                android:layout_marginBottom="0dp"/>


            <TextView
                android:id="@+id/txtUrgenceT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-23dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />





            <TextView
                android:id="@+id/txtDateLimite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Date limite :"
                android:layout_marginBottom="0dp"/>



            <TextView
                android:id="@+id/txtDateLimiteT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-23dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />


            <TextView
                android:id="@+id/txtDuree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Durée estimée :"
                android:layout_marginBottom="0dp"/>


            <TextView
                android:id="@+id/txtDureeT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-23dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txtRepet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fréquence répétition :"
                android:layout_marginBottom="0dp"/>


            <TextView
                android:id="@+id/txtRepetT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-23dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />

            <TextView
                android:id="@+id/txtCommentaire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Commentaire :"
                android:layout_marginBottom="0dp"/>


            <TextView
                android:id="@+id/txtCommentaireT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-23dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="90dp"
                android:textSize="18dp"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#FF909090"
                android:layout_marginBottom="30dp"/>


            <Button
                android:id="@+id/btnValider"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:onClick="confirmInput"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="Editer"
                android:textSize="14dp"
                android:letterSpacing="0.7"/>

            <Button
                android:id="@+id/btnSupprimer"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:onClick="confirmInput"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="25dp"
                android:text="Supprimer"
                android:textSize="14dp"
                android:letterSpacing="0.7"/>


        </LinearLayout>
    </ScrollView>